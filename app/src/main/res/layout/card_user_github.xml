<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_user_github="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_user_github"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_user_github:cardCornerRadius="8dp"
    card_user_github:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?attr/colorSecondary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            card_user_github:layout_constraintBottom_toBottomOf="parent"
            card_user_github:layout_constraintStart_toStartOf="parent"
            card_user_github:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif-medium"
            card_user_github:layout_constraintBottom_toBottomOf="parent"
            card_user_github:layout_constraintStart_toEndOf="@+id/user_photo"
            card_user_github:layout_constraintTop_toTopOf="parent"
            tools:text="@string/username_github"
            >

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>